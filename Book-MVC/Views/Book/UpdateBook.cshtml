@model BookDTO

<h1>Update Book</h1>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBook">
            <input asp-for="BookID" hidden />

            <div class="form-group">
                <label asp-for="Title" class="control-group"></label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-group"></label>
                <input asp-for="Author" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="YearOfRelease" class="control-group"></label>
                <input asp-for="YearOfRelease" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-group"></label>
                <input asp-for="Genre" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-group"></label>
                <input asp-for="Description" class="form-control" />
            </div>

            <div class="form-group" form-check>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvaliable" /> @Html.DisplayNameFor(Model => Model.IsAvaliable)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="save" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>
<div>
    <a asp-action="BookIndex">Back to Books</a>
</div>
